{
    "compilerOptions": {
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es6",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": false,
      "target": "es5",
      "allowJs": true,
      "baseUrl": ".",
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": [
      "./index.d.ts",
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "./dist/"
    ]
  }